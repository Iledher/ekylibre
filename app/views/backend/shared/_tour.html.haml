- tour = tours(params[:action])
/ Tour Modal
#welcome-tour.modal.fade{:role => "dialog"}
  .modal-dialog.tour-modal-dialog.modal-backdrop
    / Modal content
    .modal-content.tour-modal-content
      .modal-header.tour-modal-header
        %button.close.tour-close{"data-dismiss" => "modal", type: "button", onclick: 'change_back_side_menus()' } X
      .modal-body
        - if params[:action] == "home"
          .modal-alert.modal-position1
            .modal-dialog-new
              .modal-content-new
                .modal-header-blue
                  %label.modal-title= tour[0].title
                  .arrow-up-1
                .modal-body-plain
                  %label
                    = tour[0].content
