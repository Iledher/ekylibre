.nested-fields
  = link_to_remove_association(h('x'), f, class: "nested-remove")
  - f.object.document = Document.new if f.object.new_record?
  = f.backend_fields_for(:document) do |i|
    - if i.object.file?
      = image_tag(backend_document_path(i.object, format: :jpg), width: 100, height: 'auto')
      = i.object.name
    - else
      = i.input(:file, as: :file, label: false , input_html: { multiple: false, required: false })